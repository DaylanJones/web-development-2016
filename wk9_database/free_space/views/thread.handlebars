<h2>{{title}}</h2>
<p><em>{{username}}</em> at {{datetime}}</p>
<p>{{body}}</p>

{{#each replies}}
	<p><em>{{username}}</em> at {{datetime}}</p>
	<p><video src="{{vidurl}}"/></p>
	<p>{{body}}</p>
	<br/>
{{/each}}

<form method="post" action="/post/{{_id}}">
	<p>Username: <input type="text" name="username" /></p>
	<p>Video Url: <input type="text" name="vidurl" /></p>
	<textarea name="messagebody"></textarea><br/>
	<input type="submit" />
</form>
